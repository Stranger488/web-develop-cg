{
  "name": "web-develop-cg",
  "version": "1.0.0",
  "description": "IFK-training",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --config .prettierrc.json --write '{static,js,less}/**/*.{js,html,less}'",
    "postcss": "postcss css/main.css --use autoprefixer -d css/",
    "build": "mkdir deploy && cp -r css/ deploy/ && cp -r fonts/ deploy/ && cp -r img/ deploy/ && cp -r js/ deploy/ && cp -r static/ deploy/ && cp -r vendor/ deploy/",
    "deploy:prod": "now --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stranger488/web-develop-cg.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stranger488/web-develop-cg/issues"
  },
  "homepage": "https://github.com/Stranger488/web-develop-cg#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "autoprefixer": "^9.7.4",
    "commitizen": "^4.0.3",
    "cz-customizable": "^6.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g '.config/git/commitlint.js'",
      "pre-commit": "lint-staged && npm run postcss && git add css/main.css"
    }
  },
  "lint-staged": {
    "{static,js,less}/**/*.{js,html,less}": [
      "npm run prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".config/git/commitizen.js"
    }
  }
}
